<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_image"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/grid_view_design"
    android:elevation="10dp">


    <TextView
        android:id="@+id/grid_item_tempT"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:layout_marginLeft="3dp"/>

<TextView
    android:id="@+id/grid_item_number"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:layout_toEndOf="@+id/grid_item_tempT"
    android:paddingTop="5dp"
    android:textColor="@color/black"
    android:textSize="14sp" />


<View
    android:id="@+id/itemCategoryColor"
    android:layout_width="15dp"
    android:layout_height="20dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="-7dp"
    android:layout_marginRight="-3dp"
    android:background="@drawable/triangle"
    android:paddingBottom="1dp"
    android:paddingLeft="0dp"
    android:paddingRight="3dp"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="-3dp"
    android:paddingStart="0dp"
    android:paddingEnd="3dp" />


<TextView
    android:id="@+id/grid_text_items"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/grid_item_number"
    android:layout_marginTop="3dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:textColor="@color/DarkBlue"
    android:textSize="16sp"
    android:layout_alignParentStart="true" />

<TextView
    android:id="@+id/grid_text_item_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/grid_text_items"
    android:layout_marginRight="20dp"
    android:layout_marginTop="1dp"
    android:gravity="end"
    android:maxLength="15"
    android:textAlignment="center"
    android:textColor="@color/OrangeRed"
    android:textSize="15sp"
    android:layout_marginEnd="20dp"
    android:layout_alignParentEnd="true" />

<TextView
    android:id="@+id/grid_text_item_qty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/grid_text_items"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginEnd="40dp"
    android:layout_marginRight="40dp"
    android:gravity="center"
    android:maxLength="15"
    android:visibility="gone"
    android:layout_marginLeft="2dp"
    android:textAlignment="center"
    android:textColor="@color/black"
    android:textSize="13sp" />


</RelativeLayout>