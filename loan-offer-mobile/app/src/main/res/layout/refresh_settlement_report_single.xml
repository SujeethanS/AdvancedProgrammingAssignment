<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_viw="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_viw:cardCornerRadius="0dp"
    card_viw:cardBackgroundColor="#f5f5f5"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            <View
                android:id="@+id/topTextleft"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_marginRight="100dp"
                android:background="@drawable/skeleton"/>

            <View
                android:id="@+id/topTextringht"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="100dp"
                android:background="@drawable/skeleton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <View
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/skeleton"/>

            <View
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:background="@drawable/skeleton"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_marginTop="5dp"/>
</LinearLayout>